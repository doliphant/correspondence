<!-- partial form for adding posts to a discussion
locals: {discussion: discussion} -->
<!-- <div class="form"> -->
<div class="form contribution-form">

  <%= form_for [discussion, post] do |f| %>
    <div class="form-group">
      <%=f.text_area :body, rows: 4, class: 'form-control', autofocus: 'true', placeholder: "Contribute to the discussion." %>
    </div>

    <div class="form-group">
      <%= f.submit "Contribute", class: 'btn btn-success' %>
    </div>

  <% end %>
</div>
