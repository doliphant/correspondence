<!-- partial
form for adding posts to a discussion
locals: {discussion: discussion} -->

<%= form_for [discussion, post] do |f| %>
  <h4>Add your contribution</h4>

  <div class="form-group">
    <%=f.text_area :body, class: 'form-control', placeholder: "Contribute to the discussion." %>
  </div>

  <div class="form-group">
    <%= f.submit "Contribute", class: 'btn btn-success' %>
  </div>

<% end %>
