<div class= "container georg-serif">
  <%= link_to "Back to Correspondence", @correspondence %>

  <h2>Edit Contribution</h2>
  <br>
  <div class = "row">
    <div class="col-md-8">
      <%= form_for [@correspondence, @post] do |f| %>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: "Contribution Body" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>
  </div>








</div>
