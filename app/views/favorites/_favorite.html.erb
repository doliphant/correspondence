<% if policy(Favorite.new).create? %>
  <div class="favorite">
    <% if favorite = current_user.favorited(correspondence) %>
      <%= link_to [correspondence, favorite], class: 'btn btn-primary', method: :delete do %>
        <i class="glyphicon glyphicon-remove-sign"> </i>&nbsp; Unfavorite
      <% end %>
    <% else %>
      <%= link_to [correspondence, Favorite.new], class: 'btn btn-primary', method: :post do %>
        <i class="glyphicon glyphicon-heart"> </i>&nbsp; Favorite
      <% end %>
    <% end %>
  </div>
<% end %>
